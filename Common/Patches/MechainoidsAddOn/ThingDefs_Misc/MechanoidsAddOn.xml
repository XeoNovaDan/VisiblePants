<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>VFE - Mechanoids : Unoffical Add-On</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationSequence">
					<success>Always</success>
					<operations>
						<li Class="PatchOperationTest">
							<xpath>/Defs/ThingDef[defName="MAO_MechanitePants"]/apparel/wornGraphicPath</xpath>
						</li>
						<li Class="PatchOperationRemove">
							<xpath>/Defs/ThingDef[defName="MAO_MechanitePants"]/apparel/wornGraphicPath</xpath>
						</li>
					</operations>
				</li>
				<li Class="PatchOperationAddModExtension">
					<xpath>/Defs/ThingDef[defName="MAO_MechanitePants"]</xpath>
					<value>
						<li Class="VisiblePants.ThingDefExtension"/>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="MAO_MechanitePants"]/apparel</xpath>
					<value>
						<wornGraphicPath>MechanoidsAddOn/Things/Pawn/Humanlike/Apparel/MechanitePants/MechanitePants</wornGraphicPath>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>